Update Figure:<br/>
<form method="post" action="/figures/<%= @figure.id %>">
  <input name="_method" type="hidden" id="hidden" value="patch">
  
  <p>
    Figure Name: <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"><br/>
  </p>
  

  Titles: <br/>
  <% Title.all.each do |t| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= t.id %>"><%= t.name %></input><br/>
  <% end %>



  Create New Title:<br/>
  <input type="text" name="title[name]" id="new_title"><br/>
  

  
  <p>Create New Landmark:<br/>
  Name: <input type="text" name="landmark[name]" id="new_landmark"><br/>
  Year Completed: <input type="text" name="landmark[year]"><br/>
  </p>
  
  <input type="submit" value="Edit Figure">
</form>