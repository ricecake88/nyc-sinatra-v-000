Update Figure:<br/>
<form method="post" action="/figures/<%= @figure.id %>">
  <input name="method" type="_hidden" value="patch">

  or enter Title: <input type="text" name="title[name]" id="new_title"><br/>
  Figure Name: <input type="text" name="figure[name]" id="figure_name" value=
  "<%= @figure.name %>"><br/>
  Landmark Name: <input type="text" name="landmark[name]" id="new_landmark" value="<%= @figure.landmarks.first.name %>"><br/>
  <% Landmark.all.each do |l| %>
    Landmarks:<input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=l.id%>" value="<%= l.id %>" <%= "checked" if @figure.landmarks.include?(l) %>><%= l.name %><br/>
  <% end %>

  <input type="submit" value="Edit Figure">
</form>