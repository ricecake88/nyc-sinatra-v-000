Update Figure:<br/>
<form method="post" action="/figures/<%= @figure.id %>">
  <input name="method" type="_hidden" value="patch">
  
  <p>
    Figure Name: <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"><br/>
  </p>
  
  Titles: <br/>
  <% Title.all.each do |t| %>
    <%= t.name %><input type="checkbox" name="figure[title_ids][]" id="title_<%= t.id %>" value="<%= t.id %>"<%= "checked" if @figure.titles.include?(t) %>><br/>
  <% end %>

  <p>Create New Landmark:<br/>
  <input type="text" name="landmark[name]" id="new_landmark"><br/>
  <input type="text" name="landmark[year]"><br/>
  </p>
  
  <input type="submit" value="Edit Figure">
</form>